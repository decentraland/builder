{
  "version": 2,
  "name": "builder",
  "build": {
    "env": {
      "NODE_ENV": "development",
      "GEN_STATIC_LOCAL": "true",
      "VITE_BASE_URL": "/",
      "VITE_REACT_APP_DCL_DEFAULT_ENV": "dev",
      "NODE_OPTIONS": "--max_old_space_size=8192"
    }
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "15mb",
        "buildCommand": "npm run build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/auth/:match*",
      "destination": "https://decentraland.zone/auth/:match*"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ]
}
