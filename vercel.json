{
  "version": 2,
  "name": "builder",
  "build": {
    "env": {
      "NODE_ENV": "development",
      "GEN_STATIC_LOCAL": "true",
      "VITE_BASE_URL": "/",
      "VITE_REACT_APP_DCL_DEFAULT_ENV": "dev"
    }
  },
  "buildCommand": "npm ci --legacy-peer-deps && npm run build",
  "rewrites": [
    {
      "source": "/auth/:match*",
      "destination": "https://decentraland.zone/auth/:match*"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ]
}
