{
  "extends": ["dcl-tslint-config-standard", "tslint-plugin-prettier"],
  "rules": {
    "quotemark": false,
    "no-commented-out-code": false,
    "no-unnecessary-type-assertion": false,
    "prettier": [
      true,
      { "printWidth": 140, "singleQuote": true, "semi": false }
    ]
  },
  "linterOptions": {
    "exclude": ["src/contracts/*.ts", "node_modules/**/*.ts", "./**/*.js"]
  }
}

